<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @picture.title %>
</p>

<div>
  <%= image_tag @picture.file.url(:medium) %>
</div>

<table>
  <thead>
    <th colspan="3"></th>
  </thead>
  <tbody>
      <tr>
        <td><%= link_to "Upvote", like_picture_path(@picture), method: :put %></td>
        <td><%= link_to "Downvote", dislike_picture_path(@picture), method: :put %></td>
        <td><%= @picture.score %></td>
      </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_picture_path(@picture) %> |
<%= link_to 'Back', pictures_path %>
